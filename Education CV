        }

        .nav-link {
            display: inline-block;
            padding: 0.75rem 1.5rem;
            font-size: 1.1rem;
            color: #ffffff;
            text-decoration: none;
            background-color: rgba(255,255,255,0.1);
            border: 2px solid #ffffff;
            border-radius: 6px;
            transition: all 0.3s ease;
